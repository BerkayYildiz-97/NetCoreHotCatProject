@model AppUser
@{
    ViewData["Title"] = "UpdateAppUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div asp-validation-summary="All">

            </div>
            <form asp-action="UpdateAppUser" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Adı</label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Soyadı</label>
                    <input asp-for="LastName" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input asp-for="UserName" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input asp-for="Password" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <select class="form-control" name="Name">
                        @foreach (var role in ViewBag.Roles as List<AppRole>)
                        {
                            <option value="@role.Name">@role.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>

