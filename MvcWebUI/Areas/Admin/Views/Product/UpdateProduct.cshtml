@model Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="UpdateProduct" method="post">
                <div class="form-group">
                    <label>Ürün İsmi</label>
                    <input asp-for="Name" value="@Model.Name" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Ürün Fiyatı</label>
                    <input asp-for="UnitPrice" value="@Model.UnitPrice" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input asp-for="Description" value="@Model.Description" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    <input asp-for="UnitsInStock" value="@Model.UnitsInStock" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Kategorisi</label>
                    <select asp-for="CategoryId">
                        @foreach (Category item in ViewBag.Categories)
                        {
                            <option value="@item.Id">@item.CategoryName</option>
                        }
                    </select>

                </div>

                <button type="submit" class="btn btn-primary">Düzenle</button>
            </form>
        </div>
    </div>
</div>


