@model Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Edit" method="post">
                <div class="form-group">
                    <label>Kategori Adı</label>
                    <input asp-for="CategoryName" value="@Model.CategoryName" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ParentId">Üst Kategori Seçiniz :</label>
                    <select asp-for="ParentId" class="form-control" asp-items="ViewBag.Categories">
                        <option hidden >Seçiniz</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Düzenle</button>
            </form>
        </div>
    </div>
</div>

